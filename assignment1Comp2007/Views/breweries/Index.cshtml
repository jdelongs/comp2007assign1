@model IEnumerable<assignment1Comp2007.Models.brewery>

@{
    ViewBag.Title = "Brewery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Brewery Table</h2>


 <button type="button" class="btn btn-secondary">@Html.ActionLink("Create New Brewery", "Create")</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.breweryLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.breweryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.features)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.breweryLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.breweryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.features)
        </td>
        <td>
            <button class="btn btn-secondary">@Html.ActionLink("Edit", "Edit", new { id = item.breweryID }) </button>
            <button type="button" class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.breweryID })</button>
            <button type="button" class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = item.breweryID })</button>
        </td>
    </tr>
}

</table>
